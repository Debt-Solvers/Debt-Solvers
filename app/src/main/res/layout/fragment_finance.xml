<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".FinanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gradient_background"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="12dp"
            android:text="Spending Categories"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp" />

        <!-- Category Item 1 - Groceries -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_groceries" /> <!-- Replace with your grocery icon -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groceries"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Category Item 2 - Dining -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dining" /> <!-- Replace with your dining icon -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Category Item 3 - Entertainment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_entertainment" /> <!-- Replace with your entertainment icon -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Category Item 4 - Transportation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_transportation" /> <!-- Replace with your transportation icon -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportation"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Category Item 5 - Shopping -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white_rectangle_background"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shopping" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gifts"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Add more categories as needed -->

    </LinearLayout>
</ScrollView>
