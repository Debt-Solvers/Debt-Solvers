<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryColor"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- About Description -->
        <TextView
            android:id="@+id/whoAreWe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="We are a group of college students at Seneca Polytechnic who want to make expenses easier to manage."
            android:textColor="@color/secondaryColor"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Developer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet the Team"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryColor"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Developer Profile -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/developerImage1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_1"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer 1"
                        android:textSize="14sp"
                        android:textColor="@color/secondaryColor"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/developerImage2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_1"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer 1"
                        android:textSize="14sp"
                        android:textColor="@color/secondaryColor"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/developerImage3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_1"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer 1"
                        android:textSize="14sp"
                        android:textColor="@color/secondaryColor"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debt Solvers is a wonderful application that will help manage and store your expenses. You can manage your expenses individually or in a group situation."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/secondaryColor"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
