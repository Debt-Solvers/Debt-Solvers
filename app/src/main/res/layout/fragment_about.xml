<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/whoAreWe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are a group of college students at Seneca Polyechnic  who want to make expenses easier to manage."
            android:layout_marginBottom="16dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/developerImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_1"
                    android:layout_margin="8dp"/>
                <ImageView
                    android:id="@+id/developerImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_1"
                    android:layout_margin="8dp"/>
                <ImageView
                    android:id="@+id/developerImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_1"
                    android:layout_margin="8dp"/>
                <ImageView
                    android:id="@+id/developerImage4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_1"
                    android:layout_margin="8dp"/>
                <ImageView
                    android:id="@+id/developerImage5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_1"
                    android:layout_margin="8dp"/>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/appDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debt_solvers_is_a_wonderful_application_that_will_help_manage_and_store_your_expenses_you_can_manage_your_expenses_individually_or_in_a_group_situation"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>